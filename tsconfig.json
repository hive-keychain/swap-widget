{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES6", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
